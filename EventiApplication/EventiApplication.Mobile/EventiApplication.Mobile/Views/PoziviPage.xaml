<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="EventiApplication.Mobile.Views.PoziviPage">
    <ContentPage.Content>
      <!--  <StackLayout>-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Button x:Name="PoslaniPozivi"
                        Text="Poslani pozivi" Grid.Row="0" 
                        BackgroundColor="PaleVioletRed"
                        FontSize="Large"
                        TextColor="White"
                        Clicked="PoslaniPozivi_Clicked"
                        ></Button>
                <Button x:Name="DobijeniPozivi"
                        Text="Dobijeni pozivi" Grid.Row="1" 
                        BackgroundColor="PaleVioletRed"
                        FontSize="Large"
                        TextColor="White"
                        Clicked="DobijeniPozivi_Clicked"></Button>
            </Grid>
       <!--</StackLayout>--> 
    </ContentPage.Content>
</ContentPage>